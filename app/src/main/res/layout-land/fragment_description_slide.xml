<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".intro_slider.WelcomeSlide">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView"
        android:alpha="0.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/icon_half_size"
        android:layout_marginStart="@dimen/welcome_page_margin"
        android:layout_marginEnd="@dimen/welcome_page_margin"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@mipmap/ic_main_pict"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="@dimen/welcome_page_margin"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/welcome_page_margin"
            android:textSize="@dimen/app_name_text"
            android:text="@string/app_name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/welcome_page_margin"
            android:textSize="@dimen/welcome_page_desc"
            android:text="@string/description0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/welcome_page_margin"
            android:textSize="@dimen/welcome_page_desc"
            android:text="@string/description1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/welcome_page_desc"
            android:text="@string/description2" />

    </LinearLayout>

</RelativeLayout>